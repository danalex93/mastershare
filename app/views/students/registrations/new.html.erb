<h2>Registro de Alumno</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :first_name, "Nombre(s)" %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Apellido(s)" %>
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :rut, "RUN" %>
    <%= f.text_field :rut %>
  </div>

  <div class="field">
    <%= f.label :address, "Dirección y Comuna" %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :phone, "Teléfono" %>
    <%= f.text_field :phone %>
  </div>

  <div class="field">
    <%= f.label :email, "Correo Electrónico" %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, "Contraseña" %>
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirma tu Contraseña" %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>
<% end %>

<%= render "students/shared/links" %>
